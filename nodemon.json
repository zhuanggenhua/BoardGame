{
  "$schema": "https://json.schemastore.org/nodemon.json",
  "watch": [
    "server.ts",
    "src/server/",
    "src/engine/transport/server.ts",
    "src/engine/transport/protocol.ts"
  ],
  "ignore": [
    "**/*.test.*",
    "**/*.spec.*",
    "src/games/**",
    "src/engine/systems/**",
    "src/engine/primitives/**",
    "src/engine/fx/**"
  ],
  "ext": "ts",
  "exec": "npx tsx server.ts",
  "delay": "2000"
}
