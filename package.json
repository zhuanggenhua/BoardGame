{
  "name": "boardgame-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/infra/clean_ports.js && node scripts/game/generate_game_manifests.js && docker compose up -d mongodb",
    "dev": "concurrently \"npm:dev:game\" \"npm:dev:api\" \"npm:dev:frontend:wait\"",
    "predev:un": "node scripts/infra/clean_ports.js && node scripts/game/generate_game_manifests.js && docker compose up -d mongodb",
    "dev:un": "concurrently \"npx tsx server.ts\" \"npm:dev:api\" \"npm:dev:frontend:wait\"",
    "predev:lite": "node scripts/infra/clean_ports.js && node scripts/game/generate_game_manifests.js",
    "dev:lite": "cross-env USE_PERSISTENT_STORAGE=false concurrently \"npx tsx server.ts\" \"npm:dev:api\" \"npm:dev:frontend:wait\"",
    "db:start": "docker compose up -d mongodb",
    "db:stop": "docker compose stop mongodb",
    "dev:frontend": "vite",
    "dev:frontend:wait": "node scripts/infra/wait_for_ports.js && vite",
    "dev:api": "npx tsx --tsconfig apps/api/tsconfig.json apps/api/src/main.ts",
    "dev:game": "nodemon",
    "prebuild": "node scripts/game/generate_game_manifests.js",
    "build": "vite build",
    "build:full": "tsc -b && npx vite build",
    "lint": "eslint .",
    "clean:ports": "node scripts/infra/clean_ports.js",
    "generate:manifests": "node scripts/game/generate_game_manifests.js",
    "generate:locales": "node scripts/game/generate-card-locales.cjs",
    "assets:manifest": "node scripts/assets/generate_asset_manifests.js",
    "assets:validate": "node scripts/assets/generate_asset_manifests.js --validate",
    "preview": "vite preview",
    "pdf:md": "node scripts/infra/pdf_to_md.js",
    "compress:images": "node scripts/assets/compress_images.js",
    "compress:audio": "node scripts/audio/compress_audio.js",
    "audio:catalog": "node scripts/audio/generate_audio_catalog.js",
    "atlas:scan": "node scripts/assets/atlas_grid_scan.js",
    "i18n:check": "npx tsx scripts/verify/i18n-check.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:core": "vitest run src/core src/components src/hooks src/lib src/shared src/engine src/pages",
    "test:smashup": "vitest run src/games/smashup",
    "test:summonerwars": "vitest run src/games/summonerwars",
    "test:dicethrone": "vitest run src/games/dicethrone",
    "test:tictactoe": "vitest run src/games/tictactoe",
    "test:server": "vitest run src/server src/api",
    "test:ugc": "vitest run src/ugc",
    "test:games": "vitest run src/games",
    "test:api": "vitest run apps/api",
    "test:api:docker": "cross-env MONGO_URI=mongodb://localhost:27017/boardgame npm run test:api",
    "test:e2e": "node scripts/infra/check-e2e-safety.js && npx playwright test",
    "test:e2e:isolated": "cross-env PW_USE_DEV_SERVERS=false node scripts/infra/check-e2e-safety.js && npx playwright test",
    "test:e2e:ci": "cross-env PW_START_SERVERS=true node scripts/infra/check-e2e-safety.js && npx playwright test",
    "test:e2e:critical": "node scripts/infra/check-e2e-safety.js && npx playwright test e2e/smashup.e2e.ts e2e/tictactoe-rematch.e2e.ts",
    "test:e2e:cleanup": "node scripts/infra/cleanup_test_connections.js",
    "test:e2e:parallel": "npx playwright test --config=playwright.config.parallel.ts",
    "test:e2e:worker": "node scripts/infra/start-worker-servers.js",
    "test:e2e:check": "node scripts/infra/check-e2e-safety.js",
    "init:admin": "npx tsx scripts/db/init_admin.ts",
    "check:arch": "node scripts/infra/check-architecture.cjs",
    "typecheck": "tsc --noEmit",
    "assets:upload": "node scripts/assets/upload-to-r2.js",
    "assets:upload:force": "cross-env FORCE_UPLOAD=1 node scripts/assets/upload-to-r2.js",
    "assets:check": "node scripts/assets/upload-to-r2.js --check",
    "assets:sync": "node scripts/assets/upload-to-r2.js --sync",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent 1",
    "pre-push": "npm run build && npm run i18n:check && npm run test:games"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "cross-env NODE_OPTIONS=--max-old-space-size=4096 eslint --fix --max-warnings 999"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@babel/standalone": "^7.29.0",
    "@koa/router": "^15.3.0",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.9",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/platform-socket.io": "^10.3.9",
    "@nestjs/websockets": "^10.3.9",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@sentry/browser": "^10.38.0",
    "@sentry/nestjs": "^10.38.0",
    "@sentry/react": "^10.38.0",
    "@tanstack/react-query": "^5.90.20",
    "bcryptjs": "^3.0.3",
    "cache-manager": "^5.4.0",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "fflate": "^0.8.2",
    "framer-motion": "^12.27.1",
    "howler": "^2.2.4",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.5.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jsonwebtoken": "^9.0.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "lucide-react": "^0.562.0",
    "mime-types": "^2.1.35",
    "mongoose": "^8.21.1",
    "nodemailer": "^7.0.12",
    "pdf-parse": "^1.1.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.7.4",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "socket.io-msgpack-parser": "^3.0.2",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "overrides": {
    "is-generator-function": "1.0.10",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/testing": "^10.3.9",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/babel__standalone": "^7.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/howler": "^2.2.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.5",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.5.3",
    "globals": "^16.5.0",
    "happy-dom": "^20.5.3",
    "jest-util": "^29.7.0",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^9.3.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "simple-git-hooks": "^2.13.1",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-node": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "sharp": "^0.34.5"
  }
}
