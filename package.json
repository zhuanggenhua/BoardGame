{
  "name": "boardgame-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/clean_ports.js && node scripts/generate_game_manifests.js && docker compose up -d mongodb",
    "dev": "concurrently \"npm:dev:game\" \"npm:dev:api\" \"npm:dev:frontend:wait\"",
    "db:start": "docker compose up -d mongodb",
    "db:stop": "docker compose stop mongodb",
    "dev:frontend": "vite",
    "dev:frontend:wait": "node scripts/wait_for_ports.js 18000 18001 && vite",
    "dev:api": "tsx --tsconfig apps/api/tsconfig.json apps/api/src/main.ts",
    "dev:game": "vite-node server.ts",
    "prebuild": "node scripts/generate_game_manifests.js",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "clean:ports": "node scripts/clean_ports.js",
    "generate:manifests": "node scripts/generate_game_manifests.js",
    "generate:locales": "node scripts/generate-card-locales.cjs",
    "assets:manifest": "node scripts/generate_asset_manifests.js",
    "assets:validate": "node scripts/generate_asset_manifests.js --validate",
    "preview": "vite preview",
    "pdf:md": "node scripts/pdf_to_md.js",
    "compress:images": "node scripts/compress_images.js",
    "compress:audio": "node scripts/compress_audio.js",
    "atlas:scan": "node scripts/atlas_grid_scan.js",
    "test:game": "vitest run src/games",
    "test:tictactoe": "vitest run src/games/tictactoe",
    "test:dicethrone": "vitest run src/games/dicethrone",
    "test:api": "vitest run apps/api",
    "test:api:docker": "cross-env MONGO_URI=mongodb://localhost:27017/boardgame npm run test:api",
    "test:e2e": "npx playwright test",
    "test": "vitest run",
    "test:watch": "vitest",
    "init:admin": "tsx scripts/init_admin.ts",
    "check:arch": "node scripts/check-architecture.cjs",
    "typecheck": "tsc --noEmit",
    "assets:upload": "node scripts/upload-to-r2.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@babel/standalone": "^7.29.0",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.9",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/platform-socket.io": "^10.3.9",
    "@nestjs/websockets": "^10.3.9",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@tanstack/react-query": "^5.90.20",
    "bcryptjs": "^3.0.3",
    "boardgame.io": "^0.50.2",
    "cache-manager": "^5.4.0",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.27.1",
    "fflate": "^0.8.2",
    "howler": "^2.2.4",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.5.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jsonwebtoken": "^9.0.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "lucide-react": "^0.562.0",
    "mime-types": "^2.1.35",
    "mongoose": "^8.21.1",
    "nodemailer": "^7.0.12",
    "pdf-parse": "^1.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^15.7.4",
    "react-router-dom": "^7.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0"
  },
  "overrides": {
    "is-generator-function": "1.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/testing": "^10.3.9",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/babel__standalone": "^7.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/howler": "^2.2.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jest-util": "^29.7.0",
    "mongodb-memory-server": "^9.3.0",
    "postcss": "^8.5.6",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-node": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
